
delimiter $$;

create procedure `delete_problem`
(in del_prob int)
begin


delete from problems where problems.P_ID = del_prob;

end;




delimiter $$;

create procedure `select_problem`
(in sel_prob int)
begin


select * from problems where problems.P_ID = sel_prob;

end;




Edit Problem

DECLARE @PROBLEM_NAME VARCHAR(100)
DECLARE @DES CHAR(500)

UPDATE Problems SET Name = @PROBLEM_NAME, Description = @DES WHERE Name = @PROBLEM_NAME

